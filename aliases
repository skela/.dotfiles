alias gits="git status"
alias glo="git log --oneline"
alias ga="git add"
alias gc="git commit"
alias gw="git worktree"
alias rod="python3 ~/.dotfiles/libs/r/rod.py"
alias vim="nvim"
alias icat="kitty +kitten icat"
alias wifi="python3 ~/.dotfiles/scripts/wifi.py --help"
alias wifi-scan="python3 ~/.dotfiles/scripts/wifi.py --scan"
alias wifi-connect="python3 ~/.dotfiles/scripts/wifi.py --connect"

alias la='eza -al --color=always --group-directories-first' # my preferred listing
alias ls='eza -a --color=always --group-directories-first'  # all files and dirs
alias ll='eza -l --color=always --group-directories-first'  # long format
alias lt='eza -aT --color=always --group-directories-first' # tree listing

alias tmux='TERM=xterm-256color /usr/bin/tmux'
